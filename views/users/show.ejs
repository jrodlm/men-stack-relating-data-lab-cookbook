<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= user.username %>'s Recipes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1><%= user.username %>'s Recipes</h1>

  <% if (recipes.length === 0) { %>
    <p>This user hasn't posted any recipes yet.</p>
  <% } else { %>
    <ul>
      <% recipes.forEach(recipe => { %>
        <li>
          <strong><%= recipe.name %></strong><br>
          <%= recipe.instructions %><br>
          Ingredients:
          <ul>
            <% recipe.ingredients.forEach(ing => { %>
              <li><%= ing.name %></li>
            <% }) %>
          </ul>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <a href="/users">Back to Community</a>
</body>
</html>